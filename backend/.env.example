# Backend Environment Variables for Phase II Todo Application
# Copy this file to .env and fill in your actual values

# Database Configuration
# Neon PostgreSQL connection string (required)
# Format: postgresql://user:password@host:5432/database?sslmode=require
NEON_DB_URL=postgresql://user:password@your-neon-host.neon.tech:5432/todo_db?sslmode=require

# Authentication Configuration
# Shared secret for JWT signature verification (MUST match Better Auth frontend configuration)
# Minimum 32 characters, cryptographically random
BETTER_AUTH_SECRET=your-secret-key-at-least-32-characters-long-and-random

# CORS Configuration
# Frontend URL for CORS allow-list (required)
# Development: http://localhost:3000
# Production: https://your-app-domain.com
FRONTEND_URL=http://localhost:3000

# Application Configuration (optional)
# Environment: development, staging, production
ENVIRONMENT=development

# Server port (optional, defaults to 8000)
PORT=8000

# Log level (optional, defaults to INFO)
# Options: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO
